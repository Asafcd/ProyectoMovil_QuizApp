<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee04c"
    tools:context=".OptionsMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8mm"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8mm"
            android:textAlignment="center"
            android:text="Opciones de juego"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8mm"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8mm"
            android:textAlignment="center"
            android:text="Temas incluidos"
            android:textSize="15dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTemaTodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTema1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geografía"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTema2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultura General"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTema3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animales"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTema4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videojuegos"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <CheckBox android:id="@+id/CbTema5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Películas"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8mm"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8mm"
            android:textAlignment="center"
            android:text="Numero de preguntas"
            android:textSize="15dp"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="5"
            android:valueTo="10"
            android:stepSize="1"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad"/>
        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinner"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pistas"/>
            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8mm"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8mm"
                android:textAlignment="center"
                android:text="Numero de pistas"
                android:textSize="15dp"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/sliderPistas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1"
                android:valueTo="10"
                android:stepSize="1"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Iniciar"></Button>
        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Regresar"></Button>

    </LinearLayout>
</LinearLayout>